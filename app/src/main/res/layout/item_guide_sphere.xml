    <com.soundai.azero.azeromobile.ui.widget.guide.GuideSphereDotView
        android:id="@+id/v_dot"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp" />

</LinearLayout>