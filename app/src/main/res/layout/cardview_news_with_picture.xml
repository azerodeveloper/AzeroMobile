<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="315dp"
    android:layout_height="125dp">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xw_bg_img_play"
        android:gravity="center"
        android:text="播放中"
        android:textColor="@color/textPrimary"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:maxLines="2"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="特斯拉在中国量产意味着什么?" />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textHint"
        android:textSize="11sp"
        android:layout_marginTop="31dp"
        app:layout_constraintStart_toStartOf="@+id/tv_song"
        app:layout_constraintTop_toBottomOf="@+id/tv_song"
        tools:text="新华社" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:textColor="@color/textHint"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/tv_author"
        app:layout_constraintTop_toTopOf="@+id/tv_author"
        tools:text="1小时前" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/textHint"
        app:layout_constraintEnd_toStartOf="@+id/tv_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_time"
        app:layout_constraintStart_toEndOf="@+id/tv_author"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />

    <ImageView
        android:id="@+id/iv_img_1"
        android:layout_width="152dp"
        android:layout_height="85dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@drawable/xw_icon_play"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_img_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_img_1" />

</androidx.constraintlayout.widget.ConstraintLayout>