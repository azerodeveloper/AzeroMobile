<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When not playing -->
    <item android:state_pressed="true" android:state_checked="false"
        android:drawable="@drawable/play_rdi_btn_play" />
    <item android:state_focused="true" android:state_checked="false"
        android:drawable="@drawable/play_rdi_btn_play" />
    <item android:state_checked="false"
        android:drawable="@drawable/play_rdi_btn_play" />
    <!-- When playing -->
    <item android:state_pressed="true" android:state_checked="true"
        android:drawable="@drawable/play_rdi_btn_pause" />
    <item android:state_focused="true" android:state_checked="true"
        android:drawable="@drawable/play_rdi_btn_pause" />
    <item android:state_checked="true"
        android:drawable="@drawable/play_rdi_btn_pause" />
</selector>